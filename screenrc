# Encoding
defencoding utf-8

# Prefix Key
escape ^Tt

# set scrollback
defscrollback 1000000

# Delete sartt up screen
startup_message off

# logging
log on
deflog on
logfile "~/screen/log/screen-%Y%m%d-%n.log"

# Show date and screen list
hardstatus alwayslastline "%{= rw} %H %{= wk}%-Lw%{= bw}%n%f* %t%{= wk}%+Lw %{= wk}%=%{= gk} %y/%m/%d %c "

